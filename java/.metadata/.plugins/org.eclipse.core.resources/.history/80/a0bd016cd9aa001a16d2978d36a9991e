import java.util.Scanner;

public class Box2 {

	public static void main(String[] args) {
		double w;
		double a;
		double h;
		double area;
		
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("사다리꼴의 윗변 길이는?");
		w = input.nextDouble();
		System.out.print("사다리꼴의 아랫변 길이는?");
		a = input.nextDouble();
		System.out.print("사다리꼴의 높이를 입력하시오");
		h = input.nextDouble();
		System.out.print("사다리꼴의 넓이를 구하시오");
		area = (w + a) * h/2.0;
		
		System.out.println("사다리꼴의 넓이는");
		

	}

}
