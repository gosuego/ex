import java.util.Scanner;

public class Box2 {

	public static void main(String[] args) {
		double w;
		double d;
		double h;
		double area;
		
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("사다리꼴의 윗변 길이는?");
		w = input.nextDouble();
		System.out.print("사다리꼴의 아랫변 길이는?");
		d = input.nextDouble();
		System.out.print("사다리꼴의 넓이를 구하시오");
		area = (w + d) * h/2.0;
		
		System.out.println("사다리꼴의 넓이는");
		

	}

}
